@import 'alpmixins'
@import 'jeet'

#content
  text-align center

.right
  float right

.left
  float left

.nav_large
  center(max_width = 1410px)
  overflow hidden
  background $red
  margin-bottom 15px
  border-radius(5px)
  box-shadow(2px 2px 3px rgba(0,0,0,.3))

.nav_large>a
  text-decoration none

.nav_large h1
  float left
  margin-left 25px
  margin-right 25px
  font-size 31px
  font-weight 200
  color $text-white
  display inline-block
  @media screen and (max-width: 600px)
    display block
    text-align center
    float center


.nav_large ul
  display inline-block
  margin 0
  padding 0
  float left
  background $brown
  color $text-white
  list-style-type: none
  &.right
    float right
  @media screen and (max-width: 600px)
    display none
    width 100%
    text-align center
    padding 15px

.nav_large li
  box-sizing()
  float left
  display block
  text-align center
  transition(background .3s)
  border-left 1px solid $black
  &:last-child
    border-right 1px solid $black


.nav_large li a
  font-size 20px
  color $text-white
  text-decoration none
  padding 33px 10px
  display inline-block
  font-weight 200

.nav_large li:hover
  background $black


.nav_large .right li:last-child
  max-height 70px
  background $yellow
  display none
  border-right none

.nav_large .right li:last-child.show
  display inline-block

.nav_large .right li:last-child a
  display block
  font-size 25px
  font-family "liga"
  padding 30px 10px
  background $yellow
  text-decoration none
  color $text-black
  transition(all .3s)

.nav_large div a:hover
  background $brown
  color $text-white
