$red = #FA5C4F
$brown = #363636
$blue = #328C99
$yellow = #ADE849
$green = #3CBF53
$black = #000000

$text-black = #363636
$text-white = #ffffff

transition(val)
  -webkit-transition: val
  -moz-transition: val
  -o-transition: val
  transition: val

box-shadow(val)
  -webkit-box-shadow: val
  -moz-box-shadow: val
  box-shadow: val

border-radius(val)
  -moz-border-radius: val
  -webkit-border-radius: val
  border-radius: val

box-sizing()
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

circle-span()
  display block
  float right
  width 27px
  height 27px
  line-height 27px
  color $text-black
  font-size 21px
  font-weight bold
  text-align center
  text-indent 3px
  background white
  border-radius(50%)
