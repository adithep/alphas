@import 'alpmixins'

#content
  text-align center

.right
  float right

.nav_large
  margin 0 auto
  overflow hidden
  background $red
  border-radius(5px)
  box-shadow(2px 2px 3px rgba(0,0,0,.3))

.nav_large h1
  float left
  margin 25px
  font-size 31px
  font-weight 200
  color $text-white
  display inline-block
  @media screen and (max-width: 600px)
    display block
    text-align center
    float center


.nav_large ul
  display inline-block
  margin 0
  padding 0
  float left
  background $brown
  color $text-white
  list-style-type: none
  &.right
    float right
  @media screen and (max-width: 600px)
    display none
    width 100%
    text-align center
    padding 15px

.nav_large li
  box-sizing()
  float left
  display inline-block
  text-align center
  height 90px
  padding-left 10px
  padding-right 10px
  transition(background .3s)
  border-left 1px solid $black

.nav_large li a
  font-size 20px
  color $text-white
  text-decoration none
  position relative
  margin-top 50%
  display inline-block
  font-weight 200

.nav_large li:hover
  background $black


.nav_large .right li:last-child
  height 100%
  justify-content center
  height 90px
  align-items center
  background $yellow
  display none

.nav_large .right li:last-child.show
  display inline-block

.nav_large .right li:last-child a
  display inline-block
  font-size 25px
  font-family "liga"
  text-decoration none
  position relative
  margin-top 50%
  color $text-black
  transition(all .3s)

.nav_large div a:hover
  background $brown
  color $text-white
