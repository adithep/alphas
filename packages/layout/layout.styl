@require 'require.styl'

@font-face
  font-family 'liga'
  src url('liga/websymbolsligaregular.eot')
  src url('liga/websymbolsligaregular.eot?#iefix') format('embeded-opentype')
    , url('liga/websymbolsligaregular.woff') format('woff')
    , url('liga/websymbolsligaregular.ttf') format('truetype')
    , url('liga/websymbolsligaregular.svg#web_symbols_ligaregular') format('svg')



body
  margin 35px
  padding 0
  -webkit-font-smoothing antialiased
  font-family "Helvetica", arial
  font-weight normal
  font-size 16px
  color #666

.nav_large
  margin 0 auto
  overflow hidden
  background $red
  border-radius(5px)
  box-shadow(2px 2px 3px rgba(0,0,0,.3))

.nav_large h1
  float left
  margin 25px
  font-size 31px
  font-weight 200
  color $text-white
  display inline-block
  @media screen and (max-width: 600px)
    display block
    text-align center
    float center


.nav_large ul
  display inline-block
  margin 0
  padding 0
  float left
  background $brown
  color $text-white
  list-style-type: none
  &.right
    float right
  @media screen and (max-width: 600px)
    display none
    width 100%
    text-align center
    padding 15px

.nav_large li
  box-sizing()
  float left
  display flex
  justify-content center
  align-items center
  height 90px
  padding-left 10px
  padding-right 10px
  transition(background .3s)
  &:first-child
    border-left none

.nav_large li a
  font-size 20px
  color $text-white
  text-decoration none
  font-weight 200

.nav_large li:hover
  background $black


.nav_list ul
  list-style-type none
  float left
  max-width 320px
  width 100%
  margin 0
  padding 0
  background $brown
  color $text-white
  box-shadow(1px 1px 2px rgb(0,0,0,.55))

.nav_list li
  overflow hidden
  height 103px
  border-bottom 1px solid #372929

.nav_large .right li:last-child
  height 100%
  justify-content center
  height 90px
  align-items center
  background $yellow
  display none
.nav_large .right li:last-child.show
  display flex
.nav_list div
  float left
  height 100%
  background $yellow
  margin-left -110%
  transition(margin-left .3s)
.nav_list div.show
  margin-left 0
.nav_large .right li:last-child a
  display block
  text-align center
  font-size 25px
  font-family "liga"
  text-decoration none
  color $text-black
  transition(all .3s)
.nav_large div a:hover
  background $brown
  color $text-white
.nav_list span
  float right
  width 20px
  margin-right -20px
  font-family "liga"
  color $yellow
  text-indent -8px
.nav_list div a
  display block
  width 70px
  height 35px
  line-height 34px
  text-align center
  font-size 25px
  font-family "liga"
  text-decoration none
  color $text-black
  transition(all .3s)

.nav_list div a:hover
  background $brown
  color $text-white

.nav_list p
  overflow hidden
  height 67px
  line-height 22px
  font-size 14px
  margin 0
  padding 20px 20px 0 20px


