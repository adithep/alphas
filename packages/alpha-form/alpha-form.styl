@import 'alpmixins'
@import 'jeet'

.form_nav
  padding 0
  box-shadow(1px 1px 2px rgba(0,0,0,.55))
  margin 0
  display inline-block
  background $brown
  border-radius(5px)

.form_nav, ul
  padding 0
  margin 0
  list-style-type none

.form_nav li
  border-left 1px solid $black
  display inline-block
  padding 25px 5px
  &:first-child
    border-left none
  @media screen and (max-width: 600px)
    display block
    border-left none
    border-bottom 1px solid $black
    &:last-child
      border-bottom none
.form_nav a
  color $text-white

.contact_form input.input_ui
  width 100%
  padding 5px 20px
  height 35px
  padding-right 35px
  border-left 1px solid $black
  box-sizing()

.contact_form .contact_div:first-child input.input_ui
  border-top-left-radius 20px
  border-bottom-left-radius 20px
  border-left none

.contact_form .contact_div:last-child input.input_ui
  border-top-right-radius 20px
  border-bottom-right-radius 20px

.contact_form span.input_ui
  display block
  border-top 1px solid $text-white


.contact_form div.div_select
  display inline-block
  opacity 0
  position absolute
  z-index -1
  width 80%
  top 0px
  left 20px
  transition(all .2s)

.contact_form div.div_select.show
  top 35px
  z-index 1
  opacity 1



.contact_form
  margin 20px 0
  center(max_width = 1410px)

.contact_form .input_ui
  -webkit-font-smoothing antialiased
  outline none
  border none
  background $brown
  color $text-white
  font-size .9em
  line-height 25px
  resize none

.contact_form ._each_input_master
  float left
  margin 5px
.contact_form .contact_div
  position relative
  float left
  width 200px

.contact_form span+input
  padding-left 35px
  margin 0
.contact_form span.s_liga
  display none
  position absolute
  width 25px
  right 5px
  height 25px
  margin 5px 0 0 5px
  background $yellow
  color $text-black
  text-align center
  font-family "liga"
  font-size 20px
  border-radius(50%)
  line-height 27px
.contact_form .contact_div:last-child span.s_liga
  display block
.contact_form .adropdown
  display none
  background $brown
  position absolute

.contact_form .adropdown.show
  display block

.contact_form .adropdown a
  color $text-white

.contact_form .adropdown li
  border-bottom 1px solid $black
