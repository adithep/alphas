.nav_list span
  float right
  width 20px
  margin-right -20px
  font-family "liga"
  color $yellow
  text-indent -8px

.nav_list div a
  display block
  width 70px
  height 35px
  line-height 34px
  text-align center
  font-size 25px
  font-family "liga"
  text-decoration none
  color $text-black
  transition(all .3s)

.nav_list div a:hover
  background $brown
  color $text-white

.nav_list p
  overflow hidden
  height 67px
  line-height 22px
  font-size 14px
  margin 0
  padding 20px 20px 0 20px

.nav_list div
  float left
  height 100%
  background $yellow
  margin-left -110%
  transition(margin-left .3s)

.nav_list div.show
  margin-left 0

.nav_list li
  overflow hidden
  height 103px
  border-bottom 1px solid #372929

.nav_list ul
  list-style-type none
  float left
  max-width 320px
  width 100%
  margin 0
  padding 0
  background $brown
  color $text-white
  box-shadow(1px 1px 2px rgb(0,0,0,.55))
